<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_store_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#aa2288"
        app:layout_constraintHeight_percent="0.95"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_store_view_top"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.58"
                app:layout_constraintWidth_percent="0.93">

        <!--        Image space-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_store_view_top_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#FF0000"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintWidth_percent="0.33">
                    <ImageView
                        android:id="@+id/main_store_view_top_left_image_logo"
                        android:layout_width="150dp"
                        android:layout_height="90dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/ic_menu_camera">
                    </ImageView>
                </androidx.constraintlayout.widget.ConstraintLayout>

        <!--        Name open time space-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_store_view_top_right"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#00FF00"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.67">

                    <!--        open close space-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/main_store_view_top_right_open_close"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="#aabbcc"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHeight_percent="0.33">
                        <TextView
                            android:id="@+id/main_store_view_top_txt_open_close"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Deschis"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!--        Name space-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/main_store_view_top_right_name"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="#aaffaa"
                        app:layout_constraintTop_toBottomOf="@id/main_store_view_top_right_open_close"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHeight_percent="0.33">
                        <TextView
                            android:id="@+id/main_store_view_top_txtView_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Hello world"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!--        type hours  space-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/main_store_view_top_right_type"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="#11ff22"
                        app:layout_constraintTop_toBottomOf="@id/main_store_view_top_right_name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHeight_percent="0.33">
                        <TextView
                            android:id="@+id/main_store_view_top_txtView_type"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="Market"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <ImageView
                            android:id="@+id/main_store_view_top_image_opening_hours"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/clock4"
                            android:background="@android:color/transparent"
                            android:contentDescription="aaa"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/main_store_view_top_txtView_type"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <TextView
                            android:id="@+id/main_store_view_top_txt_opening_hours"
                            android:layout_width="300dp"
                            android:layout_height="20dp"
                            android:text="  08:00 - 20:00"
                            android:gravity="center_vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/main_store_view_top_txtView_type"
                            app:layout_constraintStart_toEndOf="@id/main_store_view_top_image_opening_hours"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        <!--    linie de demarcare-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#E3E3E3"
                app:layout_constraintWidth_percent="0.87"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_store_view_top"
                app:layout_constraintBottom_toTopOf="@id/main_store_view_bottom"/>
        <!--  view bottom: fee, minimum, timp livrare-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_store_view_bottom"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.38"
                app:layout_constraintWidth_percent="0.93">

        <!--        view fee-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_store_view_bottom_fee"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#00FFFF"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintWidth_percent="0.33">
                    <TextView
                        android:id="@+id/main_store_view_bottom_fee_txt_title"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="Colectare livrare:"
                        android:gravity="center_vertical|center_horizontal"
                        app:layout_constraintWidth_percent="0.8"
                        app:layout_constraintHeight_percent="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/main_store_view_bottom_fee_txt_value"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="10 lei"
                        android:gravity="center_vertical|center_horizontal"
                        app:layout_constraintWidth_percent="0.8"
                        app:layout_constraintHeight_percent="0.3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/main_store_view_bottom_fee_txt_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
        <!--        view comanda minima-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_store_view_bottom_comanda"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#1122DD"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/main_store_view_bottom_fee"
                    app:layout_constraintWidth_percent="0.33">
                    <TextView
                        android:id="@+id/main_store_view_bottom_comanda_txt_title"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="Comanda minima"
                        android:gravity="center_vertical|center_horizontal"
                        app:layout_constraintWidth_percent="0.8"
                        app:layout_constraintHeight_percent="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/main_store_view_bottom_comanda_txt_value"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="50 lei"
                        android:gravity="center_vertical|center_horizontal"
                        app:layout_constraintWidth_percent="0.8"
                        app:layout_constraintHeight_percent="0.3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/main_store_view_bottom_comanda_txt_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
        <!--        view timp livrare-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_store_view_bottom_livrare"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#11FFaa"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/main_store_view_bottom_comanda"
                    app:layout_constraintWidth_percent="0.33">

                    <TextView
                        android:id="@+id/main_store_view_bottom_livrare_txt_title"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="Timp livrare"
                        android:gravity="center_vertical|center_horizontal"
                        app:layout_constraintWidth_percent="0.8"
                        app:layout_constraintHeight_percent="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/main_store_view_bottom_livrare_txt_value"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="~ 90 min"
                        android:gravity="center_vertical|center_horizontal"
                        app:layout_constraintWidth_percent="0.8"
                        app:layout_constraintHeight_percent="0.3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/main_store_view_bottom_livrare_txt_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
<!--                end bottom-->
            </androidx.constraintlayout.widget.ConstraintLayout>
<!--        end background-->
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>